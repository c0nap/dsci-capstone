# Use a small python base, include the minor version for reproducibility
FROM python:3.10-slim

# Connect the generated Docker image to this repository
LABEL org.opencontainers.image.source="https://github.com/c0nap/dsci-capstone"

# Enable relative paths - helpful name for container's root folder
WORKDIR /flask

# Make Python stdout/stderr unbuffered so logs show immediately
ENV PYTHONUNBUFFERED=1

# Copy dependency list first to leverage build cache
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential make git curl \
 && pip install --upgrade pip setuptools wheel \
 && rm -rf /var/lib/apt/lists/*

COPY req/bookscore.txt .
RUN pip install --no-cache-dir -r bookscore.txt




# Download NLTK model
RUN python -m nltk.downloader punkt punkt_tab

# BooookScore fix: download required files from repository
RUN mkdir -p /usr/local/lib/python3.10/site-packages/booookscore/prompts && \
    curl -sSL https://raw.githubusercontent.com/lilakk/BooookScore/main/prompts/get_annotations_v2.txt \
         -o /usr/local/lib/python3.10/site-packages/booookscore/prompts/get_annotations_v2.txt && \
    curl -sSL https://raw.githubusercontent.com/lilakk/BooookScore/main/prompts/get_annotations.txt \
         -o /usr/local/lib/python3.10/site-packages/booookscore/prompts/get_annotations.txt

# Force update to OpenAI for the newer models
RUN pip install --upgrade "openai>=1.35.0"

# Patch BooookScore code: prevent infinite LLM retry loop
RUN python - <<'PY'
import importlib.util, os, re, pathlib

spec = importlib.util.find_spec("booookscore.utils")
path = pathlib.Path(spec.origin)
code = path.read_text()

code = re.sub(
    r"while response is None:",
    "for attempt in range(5):",
    code
)
code = re.sub(
    r"time\.sleep\(5\)",
    'time.sleep(5)\n            if attempt == 4:\n                raise RuntimeError("Failed after 5 attempts")',
    code
)

path.write_text(code)
print(f"Patched retry loop in: {path}")
PY


# Patch BooookScore: Relax validate_response strictness
RUN python - <<'PY'
import pathlib, importlib.util

spec = importlib.util.find_spec("booookscore.utils")
path = pathlib.Path(spec.origin)
code = path.read_text()

start = 'questions_pos = lines[0].find("Questions: ")'
end = 'types_pos = lines[1].find("Types: ")'

if start in code and end in code:
    new_block = '''match_q = None
match_t = None
import re
for line in lines:
    if re.search(r"questions?", line, re.I):
        match_q = re.search(r"questions?:\\s*(.*)", line, re.I)
    if re.search(r"types?", line, re.I):
        match_t = re.search(r"types?:\\s*(.*)", line, re.I)
if not match_q or not match_t:
    print("Questions or types not found (lenient mode)")
    return False, [], []
questions = match_q.group(1).strip()
types = match_t.group(1).strip().lower()'''
    code = code.replace(f"{start}\n        types_pos = -1\n        {end}", new_block)

path.write_text(code)
print(f"Patched lenient validate_response in: {path}")
PY







# Copy source code into the container (optional .dockerignore)
COPY src/ src/
COPY components/ components/
COPY Makefile pyproject.toml ./

# Declare build args - whether to include .env or .env.dummy
ARG ENV_FILE

# Create .env file
COPY ${ENV_FILE} .env
# Generate .env.docker with mapped hostnames
RUN make env-docker
RUN mv .env.docker .env

# Supply task as command line flag to set worker behavior
CMD ["python", "-m", "src.flask", "--task", "bookscore"]